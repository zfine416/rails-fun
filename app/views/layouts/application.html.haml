!!!
%html
  %head
    %title RailsFun
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
    %meta{:content => "user-scalable=no, initial-scale=1.0, maximum-scale=1.0", :name => "viewport"}
    %link{:href => "https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css"}
  %body
    %nav.navbar.navbar-inverse.navbar-static-top
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{"data-target" => "#navbar3", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand OpenHockey
        - if(user_signed_in?)
          #navbar3.navbar-collapse.collapse
            %ul.nav.navbar-nav.navbar-right
              %li.hidden
                %a{:href => "#page-top"}
              %li
                = link_to "Sign Out", destroy_user_session_url, :method => :delete
              %li
                = link_to "Edit Info", destroy_user_session_url
              %li
                = link_to "Edit Info", destroy_user_session_url
              %li
                %a{:href => "#"} About
              %li
                %a.page-scroll{:href => "#contact"} Contact
        - else
          #navbar3.navbar-collapse.collapse
            %ul.nav.navbar-nav.navbar-right
              %li.hidden
                %a{:href => "#page-top"}
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  Player
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    = link_to("Sign In", new_user_session_url(:role => "player"))
                  %li
                    = link_to("Sign Up", new_user_registration_url(:role => "player"))
              %li.dropdown
                %a.dropdown-toggle{"aria-expanded" => "false", "data-toggle" => "dropdown", :href => "#", :role => "button"}
                  Rink
                  %span.caret
                %ul.dropdown-menu{:role => "menu"}
                  %li
                    = link_to("Sign In", new_user_session_url(:role => "rink"))
                  %li
                    = link_to("Sign Up", new_user_registration_url(:role => "rink"))
              %li
                %a{:href => "#"} About
              %li
                %a.page-scroll{:href => "#contact"} Contact

    - if notice
      %p.alert.alert-success= notice
    - if alert
      %p.alert.alert-danger= alert
      
    = yield