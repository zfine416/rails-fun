%h1 Sign Up
= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'main-form' }) do |f|
  = devise_error_messages!
  .form-group
    = f.input :email
    = f.input :password
    = f.input :password_confirmation
    = f.hidden_field :role, value: params[:role]
    = f.button :submit

  = render "users/shared/links"
