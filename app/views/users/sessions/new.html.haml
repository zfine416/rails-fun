%h1 Sign In

= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => 'main-form' }) do |f|
  .form-group
    = f.input :email
    = f.input :password
  .form-group
    Remember me
    = f.check_box :remember_me, label: 'Remember me'
    %br
    = f.button :submit
  = render "users/shared/links"

